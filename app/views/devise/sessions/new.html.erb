<div class="container text-center mb-2">
  <h2><%= t('views.navigations.login') %></h2>
</div>

<div class="container mb-4">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "font-weight-bold" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "font-weight-bold" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check text-center mt-4">
            <%= f.check_box :remember_me, class: "form-check-input font-weight-bold" %>
            <%= f.label :remember_me, class:"form-check-label" %>
          </div>
        <% end %>

        <div class="actions text-center mt-5">
          <%= f.submit t('views.navigations.login') %>
        </div>
      <% end %>
    </div>
  </div>
</div>
